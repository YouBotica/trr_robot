<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="TRR_gripper">

  <xacro:property name="yaml_config" value="$(find robot)/config/joint_controller.yaml"/>
  <xacro:property name="props" value="${load_yaml('$(find robot)/config/props.yaml')}"/>

  <material name="blue">
  <color rgba="0 0 0.8 0.7"/>
  </material>
  <material name="black">
  <color rgba="0 0 0 0.7"/>
  </material>
  <material name="white">
  <color rgba="1 1 1 0.7"/>
  </material>
  <material name="red">
  <color rgba="0.8 0 0 0.7"/>
  </material>
  <material name="orange">
  <color rgba="0.9451 0.435 0.0784 1"/>
  </material>

<!--Base of the robot-->
  <link name="base_link">
    <visual>
      <!--origin rpy="0.0 0 0" xyz="0.0 0.0 0.025"/-->
      <origin rpy="0.0 0 0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <cylinder length="0.05" radius="0.125"/>
      </geometry>
      <material name="blue"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.05" radius="0.125"/>
      </geometry>
      <contact_coefficients mu="0.05" kp="1000.0" kd="1.0"/>
    </collision>

    <inertial>
      <mass value="10000"/>
      <inertia ixx="10" ixy="0.0" ixz="0.0" iyy="10" iyz="0.0" izz="10"/>
    </inertial>
  </link>

  <gazebo reference="base_link">
    <material>Gazebo/Blue</material>
  </gazebo>



<!--T link-->
  <link name="T_link">
    <visual>
      <origin rpy="0.0 0 0" xyz="0.0 0.0 0.0"/>
      <geometry>
        <cylinder length="0.35" radius="0.03"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.35" radius="0.03"/>
      </geometry>
      <contact_coefficients mu="0.05" kp="1000.0" kd="1.0"/>
    </collision>

    <inertial>
      <mass value="1.2271"/>
      <inertia ixx="0.0128027" ixy="0.0" ixz="0.0" iyy="0.0128027" iyz="0.0" izz="0.000552195"/>
    </inertial>
  </link>

  <gazebo reference="T_link">
    <material>Gazebo/Red</material>
  </gazebo>

<!--T joint-->
  <joint name="Torsional_cylinder" type="continuous">
    <parent link="base_link"/>
    <child link="T_link"/>
    <axis xyz="0 0 1"/>
    <origin xyz="0 0 0.51"/>
  </joint>

<!--T sphere link-->
  <link name="T_sphere_link">
    <visual>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.03"/>
      </geometry>
      <contact_coefficients mu="0.05" kp="1000.0" kd="1.0"/>
    </collision>

    <inertial>
      <mass value="0.14024"/>
      <inertia ixx="0.000050486" ixy="0.0" ixz="0.0" iyy="0.000050486" iyz="0.0" izz="0.000050486"/>
    </inertial>

  </link>

  <gazebo reference="T_sphere_link">
    <material>Gazebo/Red</material>
  </gazebo>

<!--T sphere joint-->
  <joint name="Torsional_sphere" type="fixed">
    <parent link="T_link"/>
    <child link="T_sphere_link"/>
    <origin xyz="0 0 0.175"/>
  </joint>

<!--R1 link-->
  <link name="R1_link">
    <visual>
      <origin rpy="1.57079 0 0" xyz="0.0 0.125 0"/>
      <geometry>
        <cylinder length="0.25" radius="0.02"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.25" radius="0.02"/>
      </geometry>
      <contact_coefficients mu="0.05" kp="1000.0" kd="1.0"/>
    </collision>

    <inertial>
      <mass value="0.38955716"/>
      <inertia ixx="0.002067899" ixy="0.0" ixz="0.0" iyy="0.002067899" iyz="0.0" izz="0.000077911"/>
    </inertial>
  </link>

  <gazebo reference="R1_link">
    <material>Gazebo/Red</material>
  </gazebo>


  <!--R1 joint-->
  <joint name="R1_cylinder" type="revolute">
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="-0.40" upper="3.54159" velocity="0.5"/>
    <parent link="T_sphere_link"/>
    <child link="R1_link"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

<!--R1 sphere link-->
  <link name="R1_sphere_link">
    <visual>
      <geometry>
        <sphere radius="0.022"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision>
      <geometry>
        <sphere radius="0.02"/>
      </geometry>
      <contact_coefficients mu="0.05" kp="1000.0" kd="1.0"/>
    </collision>

    <inertial>
      <mass value="0.041552764"/>
      <inertia ixx="0.000006648" ixy="0.0" ixz="0.0" iyy="0.000006648" iyz="0.0" izz="0.000006648"/>
    </inertial>
  </link>

  <gazebo reference="R1_sphere_link">
    <material>Gazebo/Red</material>
  </gazebo>

<!--R1 sphere joint-->
  <joint name="R1_sphere" type="fixed">
    <parent link="R1_link"/>
    <child link="R1_sphere_link"/>
    <origin xyz="0 0.25 0"/>
  </joint>

  <!--R2 link-->
  <link name="R2_link">
    <visual>
      <origin rpy="-1.57079 0 0" xyz="0.0 0.1 0"/>
      <geometry>
        <cylinder length="0.2" radius="0.02"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision>
      <geometry>
        <cylinder length="0.2" radius="0.02"/>
      </geometry>
      <contact_coefficients mu="0.05" kp="1000.0" kd="1.0"/>
    </collision>
    <inertial>
      <mass value="0.3116457"/>
      <inertia ixx="0.001069984" ixy="0.0" ixz="0.0" iyy="0.001069984" iyz="0.0" izz="0.000062329"/>
    </inertial>
  </link>

  <gazebo reference="R2_link">
    <material>Gazebo/Red</material>
  </gazebo>

  <!--R2 joint-->
  <joint name="R2_sphere" type="revolute">
    <axis xyz="1 0 0"/>
    <limit effort="1000.0" lower="-2.22" upper="2.22" velocity="0.5"/>
    <parent link="R1_sphere_link"/>
    <child link="R2_link"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <!--Lidar base link-->
  <link name="Lidar_base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0.02 0.16 0"/>
      <geometry>
        <box size="0.03 0.015 0.015"/>
      </geometry>
      <material name="orange"/>
    </visual>

    <collision>
      <geometry>
        <box size="0.03 0.015 0.015"/>
      </geometry>
      <contact_coefficients mu="0.05" kp="1000.0" kd="1.0"/>
    </collision>
    <inertial>
      <mass value="0.3116457"/>
      <inertia ixx="0.001069984" ixy="0.0" ixz="0.0" iyy="0.001069984" iyz="0.0" izz="0.000062329"/>
    </inertial>
  </link>

  <!--Lidar base joint-->
  <joint name="Lidar_joint" type="fixed">
    <parent link="R2_link"/>
    <child link="Lidar_base_link"/>
    <origin rpy="0 0 0" xyz="0 0 0"/>
  </joint>

  <gazebo reference="Lidar_base_link">
    <sensor name="lidar" type="ray">
      <always_on>true</always_on>
      <visualize>true</visualize>
      <update_rate>5</update_rate>
      <ray>
        <scan>
          <horizontal>
            <samples>120</samples>
            <resolution>1.000000</resolution>
            <min_angle>-3.14159</min_angle>
            <max_angle>3.14159</max_angle>
          </horizontal>
        </scan>
        <range>
          <min>0.05</min>
          <max>15.0</max>
          <resolution>0.015</resolution>
        </range>
        <noise>
          <type>gaussian</type>
          <mean>0.0</mean>
          <stddev>0.01</stddev>
        </noise>
      </ray>
      <plugin name="scan" filename="libgazebo_ros_ray_sensor.so">
        <ros>
          <remapping>~/out:=scan</remapping>
        </ros>
        <output_type>sensor_msgs/LaserScan</output_type>
        <frame_name>lidar_link</frame_name>
      </plugin>
    </sensor>
  </gazebo>
  <gazebo reference="Lidar_base_link">
    <mu1>0.01</mu1>
    <mu2>0.01</mu2>
    <material>Gazebo/Black</material>
  </gazebo>


  <!-- Torsional Gazebo Joint config -->
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>    
    <joint name="Torsional_cylinder">
      <command_interface name="position">
        <param name="min">-3.14159</param>
        <param name="max">3.14159</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

    <!-- R1 Gazebo Joint config -->
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>    
    <joint name="R1_cylinder">
      <command_interface name="position">
        <param name="min">-0.40</param>
        <param name="max">3.54159</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>

    <!-- R2 Gazebo Joint config -->
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>    
    <joint name="R2_sphere">
      <command_interface name="position">
        <param name="min">-2.22</param>
        <param name="max">2.22</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
      <state_interface name="effort"/>
    </joint>
  </ros2_control>


  <gazebo>
    <plugin filename="libgazebo_ros2_control.so" name="gazebo_ros2_control">
      <!-- <parameters>$(find box_car_description)/config/steering_controller_velocity.yaml</parameters> -->
      <parameters>/home/legacy/trr_robot_ws/src/robot/config/joint_controller.yaml</parameters>
    </plugin>
  </gazebo>




</robot>